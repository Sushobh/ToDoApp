<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
        xmlns:tools="http://schemas.android.com/tools" app:cardCornerRadius="5dp"
        android:layout_margin="@dimen/card_margin"
        android:elevation="@dimen/card_elevation"
        app:contentPadding="10dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="Wash dishes"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/task_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginTop="@dimen/task_card_divider_margin_bottom"
                android:id="@+id/task_date"
                android:text="30-Jan-2019"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

        <TextView
                android:textAlignment="center"
                android:id="@+id/task_status"
                android:text="Completed"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/task_date"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <View
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/task_date"
                app:layout_constraintTop_toBottomOf="@+id/task_name"
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                tools:layout_editor_absoluteY="39dp" tools:layout_editor_absoluteX="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
